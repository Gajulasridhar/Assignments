@model Movie
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="form-container">
    <form method="post" action="Add">
        <table class="form-table">
            <tr>
                <td><label for="Id">MovieId</label></td>
                <td><input type="number" id="Id" asp-for="MovieId" class="input-field" /></td>
            </tr>
            <tr>
                <td><label for="Title">Title</label></td>
                <td><input type="text" id="Title" asp-for="Title" class="input-field" /></td>
            </tr>
            <tr>
                <td><label for="Actor">Actor</label></td>
                <td><input type="text" id="Actor" asp-for="Actor" class="input-field" /></td>
            </tr>
            <tr>
                <td><label for="Language">Language</label></td>
                <td><input type="text" id="Language" asp-for="Language" class="input-field" /></td>
            </tr>
            <tr>
                <td><label for="Director">Director</label></td>
                <td><input type="text" id="Director" asp-for="Director" class="input-field" /></td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" name="name" value="Submit" class="submit-button" />
                </td>
            </tr>
        </table>
    </form>
</div>

<style>
    .form-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .form-table {
        width: 100%;
        border-collapse: collapse;
    }

        .form-table td {
            padding: 10px;
        }

            .form-table td label {
                font-weight: bold;
                display: inline-block;
                margin-bottom: 5px;
            }

    .input-field {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .submit-button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        .submit-button:hover {
            background-color: #0056b3;
        }
</style>
