@model IEnumerable<HandsOnEFDB.Entities.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<link rel="stylesheet" href="~/css/styles.css" />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpFname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpLname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptNoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpFname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpLname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptNoNavigation.DeptNo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmpNo">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EmpNo">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmpNo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
